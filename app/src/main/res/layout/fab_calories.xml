<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.FloatingActionButton
        app:fabSize="mini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fabCal_Run"
        android:layout_gravity="center_vertical|right"
        android:foregroundGravity="center"
        android:layout_marginRight="21dp"
        android:background="@drawable/s_fabmenu_fab_calories"
        android:src="@drawable/ic_fab_run_wt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="21dp"
        android:visibility="gone"
        android:elevation="5dp" />

    <android.support.design.widget.FloatingActionButton
        app:fabSize="mini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fabCal_Bike"
        android:layout_gravity="center_vertical|right"
        android:foregroundGravity="center"
        android:layout_marginRight="21dp"
        android:background="@drawable/s_fabmenu_fab_calories"
        android:src="@drawable/ic_fab_bike_wt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="21dp"
        android:visibility="gone"
        android:elevation="5dp" />

    <android.support.design.widget.FloatingActionButton
        app:fabSize="mini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fabCal_Swim"
        android:layout_gravity="center_vertical|right"
        android:foregroundGravity="center"
        android:layout_marginRight="21dp"
        android:background="@drawable/s_fabmenu_fab_calories"
        android:src="@drawable/ic_fab_swim_wt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="21dp"
        android:visibility="gone"
        android:elevation="5dp" />

</RelativeLayout>